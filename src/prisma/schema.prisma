enum ProductType {
  BY_METER
  BY_ITEM
}
generator client {
 provider        = "prisma-client-js"
  output         = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique                     
  image       String                                   
  products    Product[]                               
  createdAt   DateTime   @default(now())              
  updatedAt   DateTime   @updatedAt                    
}
model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  images      String[]                               
  material    String?
  dimensions  String?
  price       Float?
  sku         String?
  type        ProductType 
  sizes       SizeProduct[] 
  categoryId  Int                                    
  category    Category   @relation(fields: [categoryId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
model SizeProduct {
  id        Int       @id @default(autoincrement())
  productId Int
  product   Product   @relation(fields: [productId], references: [id])
  meterPrice Float?      
  width      Float?
  height     Float?
  itemPrice  Float?      
  createdAt  DateTime @default(now())
}